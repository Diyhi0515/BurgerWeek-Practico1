<%- include('../../components/headerpub.ejs') %>

<div class="container py-5">
  <h1 class="mb-4">Hamburguesas de <%= restaurante.nombre %></h1>

  <div class="row">
    <% restaurante.hamburguesas.forEach(hamburguesa => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img src="<%= hamburguesa.foto %>" class="card-img-top" alt="<%= hamburguesa.nombre %>">
          <div class="card-body d-inline-flex flex-column justify-content-between">
            <h5 class="card-title"><%= hamburguesa.nombre %></h5>
            <a href="/hamburguesa/<%= hamburguesa.id %>" class="btn btn-primary">Ver detalles</a>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<%- include('../../components/footer.ejs') %>
