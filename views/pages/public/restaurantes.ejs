<%- include('../../components/headerpub.ejs') %>

<div class="container py-5">
  <h1 class="mb-4">Restaurantes Burger Week 🍔</h1>

  <div class="row">
    <% restaurantes.forEach(restaurante => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img src="<%= restaurante.logo %>" class="card-img-top" alt="<%= restaurante.nombre %>">
          <div class="card-body">
            <h5 class="card-title"><%= restaurante.nombre %></h5>
            <a href="/restaurantes/<%= restaurante.id %>/hamburguesas" class="btn btn-primary">Ver hamburguesas</a>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<%- include('../../components/footer.ejs') %>
