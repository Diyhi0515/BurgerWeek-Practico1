<%- include('../../components/headerpub.ejs') %>

<div class="container py-5">
  <h1 class="mb-4">Restaurantes Burger Week 🍔</h1>

  <div class="row">
    <% restaurantes.forEach(restaurante => { %>
      <div class="col-md-3 mb-2">
        <div class="card" style="width: 18rem;">
          <img src="<%= restaurante.logo %>" height="220" class="card-img-top" alt="<%= restaurante.nombre %>">
          <div class="card-body flex-column d-inline-flex justify-content-between">
            <h5 class="card-title text-center"><%= restaurante.nombre %></h5>
            <a href="/restaurantes/<%= restaurante.id %>/hamburguesas" class="btn btn-outline-success my-2 my-sm-0">Ver hamburguesas</a>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<%- include('../../components/footer.ejs') %>
