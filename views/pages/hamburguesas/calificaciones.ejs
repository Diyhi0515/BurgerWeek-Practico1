<%- include('../../components/header.ejs') %>

<div class="container py-5">
  <h1 class="h4 mb-4">Calificaciones de "<%= hamburguesa.nombre %>"</h1>

  <% if (hamburguesa.calificaciones.length === 0) { %>
    <div class="alert alert-info">No hay calificaciones aún.</div>
  <% } else { %>
    <ul class="list-group shadow-sm">
      <% hamburguesa.calificaciones.forEach(c => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong>Puntaje:</strong> <%= c.puntaje %>/5 ⭐
            <% if (c.probado) { %><span class="badge bg-success ms-2">Probado</span><% } %>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <a href="/admin/hamburguesas" class="btn btn-outline-secondary mt-4">
    <i class="bi bi-arrow-left"></i> Volver al listado
  </a>
</div>

<%- include('../../components/footer.ejs') %>
